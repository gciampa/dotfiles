# chruby
# source /opt/homebrew/opt/chruby/share/chruby/chruby.sh
# source /opt/homebrew/opt/chruby/share/chruby/auto.sh

# mise
eval "$(mise activate zsh)"

# configure PATH for homebrew
export PATH="/opt/homebrew/bin:$PATH"
export PATH="/opt/homebrew/opt/postgresql@18/bin:$PATH"

# Add ./bin to PATH for easier rails
export PATH="./bin:$PATH"

# golang
export GOPATH=$HOME/go
export PATH=$PATH:$GOPATH/bin

# fzf
export FZF_DEFAULT_COMMAND="rg --files"
export FZF_DEFAULT_OPTS="--height 40% --layout reverse"
[ -f "$HOME/dotfiles-local/zsh/configs/base16-oceanicnext.config" ] &&
  source "$HOME/dotfiles-local/zsh/configs/base16-oceanicnext.config"

# neovim
export VISUAL=nvim
export EDITOR=$VISUAL

# bat
export BAT_THEME=base16

# GPG
export GPG_TTY=$(tty)

# SQLite
export PATH="/opt/homebrew/opt/sqlite/bin:$PATH"

# Claude
export CLAUDE_CODE_USE_BEDROCK=1
export AWS_PROFILE=oam-next-dev-admin
# export AWS_REGION=us-east-1

# Starship prompt (replaces default thoughtbot prompt)
# To revert: comment out the lines below and restart your shell
# The classic prompt is preserved in ~/dotfiles/zsh/configs/prompt.zsh
export STARSHIP_CONFIG="$HOME/dotfiles-local/config/starship.toml"
eval "$(starship init zsh)"
